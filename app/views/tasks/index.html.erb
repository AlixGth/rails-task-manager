<h1>"Here are all your tasks!"</h1>

<% @tasks.each do |task| %>
<div>
  <% if task.completed == true %>
	<input type="checkbox" id="task" name="task" checked disabled="disabled">
  <% else%>
	<input type="checkbox" id="task" name="task" disabled="disabled">
  <% end %>
  <span>  <%= link_to task.title, task_path(task) %> <%= link_to task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } do %> 
  <i class="las la-trash-alt"></i> <% end %>
  </span>
</div>

<% end %>
 <p> <%= link_to "Add a new task", new_path %> </p>

